@{
    ViewBag.Title = "Index";
}

<h5>Mange TFN Alert Notification</h5>

<div class="row">

    <div class="col-lg-12 well">
        <div class="row">

            @using (Html.BeginForm("Index", "ManageTFN", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="col-lg-3">
                    <input type="file" name="file" accept="application/xlsx" class="form-control" width="200" />
                </div>
                <div class="col-lg-6"><input class="btn btn-primary" type="submit" name="Submit" id="Submit" value="Upload" /></div>
            }
            <br />
            @if (ViewData["ProcessError"] != null)
            {
                <script>
                    alert('@ViewData["ProcessError"].ToString()')
                </script>
            }
            
            @if (ViewData["ProcessSuccess"] != null)
            {
                <script>
                    alert('@ViewData["ProcessSuccess"].ToString()')
                </script>
            }

        </div>


        <hr />

